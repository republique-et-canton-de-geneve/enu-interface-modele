<?xml version="1.0" encoding="UTF-8" ?>
<settings>
    <servers>
      <server>
        <id>clm_server</id>
         <username>${env.CLM_USER}</username>
          <password>${env.CLM_PASS}</password>
        </server>
        <server>
			<id>internal.project.release</id>
            <username>${env.Nexus_REPO_USER}</username>
            <password>${env.Nexus_REPO_PASS}</password>
		</server>
		<server>
			<id>internal.project.snapshot</id>
            <username>${env.Nexus_REPO_USER}</username>
            <password>${env.Nexus_REPO_PASS}</password>
		</server>
		<server>
			<id>internal.lot.release</id>
            <username>${env.Nexus_REPO_USER}</username>
            <password>${env.Nexus_REPO_PASS}</password>
		</server>
		<server>
			<id>internal.lot.snapshot</id>
            <username>${env.Nexus_REPO_USER}</username>
            <password>${env.Nexus_REPO_PASS}</password>
		</server>
		<server>
			<id>projects_Website</id>
            <username>${env.Nexus_REPO_USER}</username>
            <password>${env.Nexus_REPO_PASS}</password>
		</server>
        <!-- connexion au serveur OSSRH de Sonatype -->
        <server>
            <id>ossrh</id>
            <username>${env.OSSRH_USER}</username>
            <password>${env.OSSRH_PASSWORD}</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <!--This sends everything else to /public -->
            <id>nexus</id>
            <mirrorOf>*</mirrorOf>
            <url>${env.Nexus_REPO_URL}/groups/public</url>
        </mirror>
    </mirrors>

    <!-- Pour publication sur le serveur OSSRH de Sonatype -->
    <proxies>
        <proxy>
            <id>proxy-ge</id>
             <active>true</active>
             <protocol>https</protocol>
             <host>${env.PROXY_HOST}</host>
             <!-- il faut mettre le port en dur ! Voir https://issues.sonatype.org/browse/OSSRH-72300
             <port>${env.PROXY_PORT}</port>
             -->
             <port>3128</port>
             <nonProxyHosts>${env.PROXY_NON_PROXY_HOSTS}</nonProxyHosts>
        </proxy>
    </proxies>

    <profiles>
        <profile>
            <id>nexus</id>
            <!--Enable snapshots for the built in central repo to direct -->
            <!--all requests to nexus via the mirror -->
            <repositories>
                <repository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
            <properties>
                <maven2Repository_projet>${env.Nexus_REPO_URL}/repositories</maven2Repository_projet>
                <maven2Repository_lot>${env.Nexus_REPO_URL}/repositories</maven2Repository_lot>
                <siteRepository>${env.Nexus_REPO_URL}/sites/projects_Website</siteRepository>
                <projects_Website>dav:${env.Nexus_REPO_URL}/sites/projects_Website</projects_Website>
            </properties>
        </profile>

        <!-- Signature PGP des JAR, pour publication sur Sonatype OSSRH.
             Les proprietes sont exploitees par le maven-gpg-plugin.
          -->
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>${env.GPG_KEYNAME}</gpg.keyname>
                <gpg.homedir>${env.GPG_HOMEDIR}</gpg.homedir>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <!--make the profile active all the time -->
        <activeProfile>nexus</activeProfile>
    </activeProfiles>

</settings>
